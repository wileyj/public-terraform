{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "BaseCloudwatch",
            "Action": [
                "cloudwatch:ListMetrics",
                "cloudwatch:GetMetricStatistics",
                "cloudwatch:Describe*",
                "events:List*",
                "events:DescribeRule",
                "logs:Describe*",
                "logs:GetLogEvents",
                "logs:FilterLogEvents"
            ],
            "Resource": [
                "*"
            ],
            "Effect": "Allow"
        }
    ]
}
